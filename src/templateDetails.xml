<?xml version="1.0" encoding="utf-8"?>
<extension type="template" method="upgrade">
	<name>ttactua</name>
	<creationDate>2022-11-09</creationDate>
	<author>Gijs Lamon</author>
	<authorEmail>info@gileba.be</authorEmail>
	<authorUrl>https://gileba.be/</authorUrl>
	<copyright>(c)2022 by Gileba</copyright>
	<license>GNU/GPL</license>
	<version>1.3.0</version>
	<description>J4 template for Tafeltennisactua.be</description>
	<updateservers>
		<server type="extension" priority="1" name="TTactua Template Update Site">https://gileba.be/updates/tpl_ttactua.xml</server>
	</updateservers>
    <changelogurl>https://gileba.be/changelogs/tpl_ttactua.xml</changelogurl>
	<files>
		<folder>css</folder>
		<folder>html</folder>
		<filename>index.php</filename>
		<filename>joomla.asset.json</filename>
		<filename>templateDetails.xml</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_ttactua.ini</language>
		<language tag="nl-BE">nl-BE/nl-BE.tpl_ttactua.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.tpl_ttactua.ini</language>
	</languages>
	<media destination="templates/site/ttactua" folder="media">
		<folder>css</folder>
		<folder>scss</folder>
		<folder>images</folder>
	</media>
	<positions>
		<position>logo</position>
		<position>nav</position>
		<position>content-header</position>
		<position>footer</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="google">
				<field type="spacer" name="tagmanager-header" label="&lt;strong&gt;Google Tag Manager&lt;/strong&gt;" />
				<field name="tagmanager" type="textbox" default="" label="TPL_TTACTUA_TAGMANAGER" description="TPL_TTACTUA_TAGMANAGER_DESC" />
				<field type="spacer" name="ads-header" label="&lt;strong&gt;Google Ads&lt;/strong&gt;" />
				<field name="publisherid" type="textbox" default="" label="TPL_TTACTUA_PUBLISHERID" description="TPL_TTACTUA_PUBLISHERID_DESC" />
			</fieldset>

		</fields>
	</config>
</extension>
